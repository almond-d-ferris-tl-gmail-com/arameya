<br>
<h1><span style="background-color:lightgray" class="m-5">　ジャンル一覧・追加・削除　</span></h1>
<br>
  <%= form_with model: @genre, url: admin_genres_path do |f| %><!--url(遷移先):admin/genres#create-->
    <table border="0" style="display:flex; justify-content:center">
      <tr>
        <td width="120">ジャンル名</td>
        <td width="250"><%= f.text_field :name %></td>
        <td width="150"><%= f.submit '新規登録', class: "btn btn-success" %></td>
      </tr>
    </table>
  <% end %>
<br><br>
  <table class="table" style="display:flex; justify-content:center">
    <tr bgcolor="lightgray" style="text-align:center" height="50">
      <th>ジャンル</th>
      <th></th>
    </tr>
  
    <% @genres.each do |genre| %>
      <tr height="50">
        <td width="200" class="align-middle"><%= genre.name %></td>
        <!--遷移先：admin/genres#edit(ジャンル編集)-->
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
        <!--遷移先：admin/genres#destroy-->
        <td><%#= link_to "削除する", admin_genre_path(genre.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <% end %>
  </table>
<br>