  <h3 class="pl-5">登録情報　　<%= link_to '編集するボタン', members_information_edit_path, class: "btn btn-success" %></h3>
    
    <table border="1" width="800" class="mx-auto">
      <tr>
        <td height="50" width="100" bgcolor="lightgray">氏名</td>
        <td width="300"><%= @member.last_name %> <%= @member.first_name %></td>
      </tr>
      <tr>
        <td height="50" bgcolor="lightgray">カナ</td>
