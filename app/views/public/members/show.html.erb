        <td height="50" bgcolor="lightgray">郵便番号</td>
        <td><%= @member.postal_code %></td>
      </tr>
      <tr>
        <td height="50" bgcolor="lightgray">住所</td>
        <td><%= @member.address %></td>
      </tr>
      <tr>
        <td height="50" bgcolor="lightgray">電話番号</td>
        <td><%= @member.telephone_number %></td>
      </tr>
      <tr>
        <td height="50" bgcolor="lightgray">メールアドレス</td>
        <td><%= @member.email %></td>
      </tr>
    </table>

