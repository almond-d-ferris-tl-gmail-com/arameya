<!--会員マイページサイドメニューバー グリッドシステム設定はそれぞれの本体部分で行う-->
<div class="container-fluid">
  <div class="row">
    <div class="offset-xl-1"></div>
    <div class="col-xl-2">
      <%= render "/layouts/member_mypage", member:current_member %>
    </div>
    <div class="col-xl-9">
<br>
      <h2><span class="m-5" style="background-color:lightgray">　マイページ　</span></h2>
<br>
        <table border="0" width="800" class="mx-auto">
          <tr>
            <th height="50" width="100">氏名</th>
            <td width="300"><%= @member.last_name %> <%= @member.first_name %></td>
          </tr>
          <tr>
            <th height="50">カナ</th>
            <td><%= @member.last_name_kana %> <%= @member.first_name_kana %></td>
          </tr>
          <tr>
            <th height="50">会社名</th>
            <td><%= @member.company %></td>
          </tr>
          <tr>
            <th height="50">役職・部署名</th>
            <td><%= @member.department %></td>
          </tr>
          <tr>
            <th height="50">郵便番号</th>
            <td><%= @member.postal_code %></td>
          </tr>
          <tr>
            <th height="50">住所</th>
            <td><%= @member.address %></td>
          </tr>
          <tr>
            <th height="50">電話番号</th>
            <td><%= @member.telephone_number %></td>
          </tr>
          <tr>
            <th height="50">メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= link_to '編集するボタン', members_information_edit_path, class: "btn btn-success" %></td> <!--url(遷移先):public/members#edit(会員情報編集)-->
          </tr>
        </table>
    </div>
  </div>
</div>
<br>