<br>
      <h2><span style="background-color:lightgray" class="m-5">　配送先登録/一覧　</span></h2>
<br>
        <%= form_with model: @address_new, url: buy_addresses_path do |f| %><!--url(遷移先):public/buy_addresses#create-->
          <table border="0" class="ml-5">
            <tr height="50">
              <th width="100">郵便番号</th>
              <td width="250"><%= f.text_field :postal_code %></td>
            </tr>
            
            <tr height="50">
              <th>住所</th>
              <td><%= f.text_area :address, size: "50" %></td>
            </tr>
            
            <tr height="50">
              <th>宛名</th>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit '新規登録', class: "btn btn-success" %></td>
            </tr>
          </table>
        <% end %>

<br><br>
        <table border="0" width="1000" class="ml-5"><!--ボーダーを入れるときは←の設定する(widthはtdの総計)-->
          <tr bgcolor="lightgray" style="text-align:center" height="50">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        
          <% @addresses.each do |address| %>
            <tr height="80">
              <td width="100" align="center"><%= address.postal_code %></td>
              <td width="400"><%= address.address %></td>
              <td width="200" align="center"><%= address.name %></td>
              <td width="300" align="center">
                <!--遷移先：public/buy_addresses#edit(配送先編集)-->
                <%= link_to "編集する", edit_buy_address_path(address.id), class: "btn btn-success" %>　　
                <!--遷移先：public/buy_addresses#destroy-->
                <%= link_to "削除する", buy_address_path(address.id), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
              </td>
            </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>
<br>