<h2><span style="background-color:lightgray" class="m-5">　商品一覧(検索結果)　</span><span style="font-size:20px"></span></h2>

  <div class="m-5 d-flex flex-wrap"><!--flex-wrap→改行する-->
    <table  class="m-5 d-flex flex-wrap">
      <tr>
        <!--genreとitemの検索結果(共通ページ)-->
        <% items.each do |item| %>
          <td width="200">    
            <%= link_to buy_item_path(item.id) do %><!--画像、商品名、金額に商品詳細(遷移先:public/buy_items#show)-->
              <% if item.image.attached? %>
                <%= image_tag item.image, width: '150px', height: 'auto' %><br>
              <% else %>
                <%= image_tag 'no_image', size: "150x150" %><br><!--画像４枚-->
              <% end %>
              <div class="d-block text-truncate" style="max-width: 150px;"><!--幅150px以上は文字切り詰め-->
              <%= item.name %><br><!--商品名-->
              </div>
              税抜
              <%= item.price.to_s(:delimited) %><!--金額--><!--to_s(:delimited)→文字列に変換してカンマをつける-->
              円<br>
              <%#= item.member.name %><br><!--販売者名-->
            <% end %>
          </td>      
        <% end %>
      </tr>
    </table>    
  </div>
